#!/bin/bash

# Pauses mpvpaper while any active windows are open
paused=false

while sleep 3; do
    if hyprctl activewindow | grep -q "class:"; then
        if [ "$paused" = false ]; then
            pkill -STOP mpvpaper
            paused=true
        fi
    else
        if [ "$paused" = true ]; then
            pkill -CONT mpvpaper
            paused=false
        fi
    fi
done
